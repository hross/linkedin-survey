@{
    ViewBag.Title = "Take the Test";
}

@section scripts {
    <script src="~/Scripts/js/models/segment.js"></script>
    <script src="~/Scripts/js/models/question.js"></script>
    <script src="~/Scripts/js/models/survey.js"></script>
    <script src="~/Scripts/js/models/answer.js"></script>
    <script src="~/Scripts/js/views/question-view.js"></script>
    <script src="~/Scripts/js/views/segment-view.js"></script>
    <script src="~/Scripts/js/views/survey-view.js"></script>
    <script src="~/Scripts/js/routers/router.js"></script>
    <script src="~/Scripts/js/app.js"></script>
}
<div id="survey_container"></div>
<div id="segment_container"></div>
<div id="question_container"></div>
<div id="finish">You are done!</div>


<script type="text/template" id="question-template">
    <div class="question"><%=text%></div>
    <div class="well">
        <% _.each(answers, function(answer) { %>
            <a class="btn btn-primary btn-lg btn-block answer button" role="button" data-id="<%=answer.id%>" href="#"><%=answer.text%></a>
        <% }) %>
    </div>
</script>

<script type="text/template" id="segment-template">
    <div class="segment"><%=name%></div>
    <p><%=description%></p>
    <div class="well">
        <a class="btn btn-default btn-lg btn-block start button" data-id="<%=firstQuestionId%>" onclick="" href="#"><%=buttonText%></a>
    </div>
</script>

<script type="text/template" id="survey-template">
    <div class="survey"><%=name%></div>
    <p><%=description%></p>
    <div class="well">
        <a class="btn btn-default btn-lg btn-block start button" data-id="<%=firstSegmentId%>" onclick="" href="#"><%=buttonText%></a>
    </div>
</script>